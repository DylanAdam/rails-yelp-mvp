<div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1504754524776-8f4f37790ca0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80');">
	<div class="card-category"><%= @restaurant.category %>
	</div>
		<div class="card-description">
			<h2><%= @restaurant.name %></h2>
			<p>	<%= @restaurant.address %></p>
		</div>
</div>

<%= link_to restaurant_reviews_path(@restaurant) do  %>
	<p class="btn btn-primary btn-lg">See reviews for this restaurant</p>
<% end %>
<%= link_to new_restaurant_review_path(@restaurant) do  %>
	<p class="btn btn-primary btn-lg">Add a review to this restaurant</p>
<% end %>