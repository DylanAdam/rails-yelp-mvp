 <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1505935428862-770b6f24f629?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1047&q=80');">
     <div class="banner-content">
        <h1>Delivered under 30min</h1>
        <p>Choose your restaurant</p>
        <a class="btn btn-primary btn-lg">Order now</a>
     </div>
 </div>

<div class="container">
	<div class="row">
		<% @restaurants.each do |restaurant| %>
			<%= link_to restaurant_path(restaurant) do  %>
				<div class="col-xs-12 col-sm-4">
					<div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1504754524776-8f4f37790ca0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80');">
						<div class="card-category"><%= restaurant.category %>
						</div>
						<div class="card-description">
							<h2><%= restaurant.name %></h2>
							<p>	<%= restaurant.address %></p>
						</div>
					</div>
				</div>	
			<% end %>
		<% end %>
	</div>
</div>